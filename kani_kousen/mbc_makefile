all:
	/opt/gbdk/bin/lcc -Wa-l -Wl-m -Wl-j -Wl-yo4 -Wl-ya4 -c -o main.o main.c
	/opt/gbdk/bin/lcc -Wf-bo1 -Wf-ba1 -c -o level_1/asakawa_battle.o level_1/asakawa_battle.c
	/opt/gbdk/bin/lcc -Wa-l -Wl-m -Wl-j -Wl-yt2 -Wl-yo4 -Wl-ya4 -o main.gb main.o level_1/asakawa_battle.o

clean:
	rm *.o *.gb *.sym *.map *.lst

play:
	wine ../bgb/*.exe main.gb
